<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp">

        <ImageView
            android:id="@+id/img_item_galdana"
            android:layout_width="170dp"
            android:padding="6dp"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:src="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_galdana"
            android:text="Tittle Post"
            android:textColor="#262626"
            android:layout_toRightOf="@id/img_item_galdana"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_username"
            android:text="Username"
            android:textSize="18sp"
            android:layout_toRightOf="@id/img_item_galdana"
            android:textColor="#FA1010"
            android:fontFamily="@font/roboto_regular"
            android:layout_below="@id/tv_item_galdana" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_item_galdana"
            android:layout_below="@id/tv_item_username"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>